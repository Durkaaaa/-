<Window x:Class="Diploma.View.AddNewMedicalСardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma.View"
        mc:Ignorable="d"
        Title="Создание мад. карты" 
        Height="100" 
        Width="150"
        x:Name="AddMedicalCardWnd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="Пациент"
                       Width="130"/>
            <ComboBox ItemsSource="{Binding AllPatient}"
                      DisplayMemberPath="Titl"
                      SelectedItem="{Binding SelectedPatient}"/>
        </StackPanel>

        <Button Content="Создать"
                Grid.Row="1"/>
    </Grid>
</Window>
