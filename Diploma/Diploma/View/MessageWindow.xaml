<Window x:Class="Diploma.View.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma.View"
        mc:Ignorable="d"
        Title="MessageWindow" Height="450" Width="800"
        Name="MessageWnd">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="15"  
                   FontFamily="Comic Sans MS"/>

        <Button Content="OK" 
                Grid.Row="1" 
                FontSize="15"  
                FontFamily="Comic Sans MS"
                Command="{Binding CloseWindow}" 
                CommandParameter="{Binding ElementName=MessageWnd}"/>
    </Grid>
</Window>
